<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/windows/2009/Ribbon">
  <Application.Commands>
    <Command Name="cmdShowGrid" Symbol="IDC_CMD_SHOW_GRID">
      <Command.LabelTitle>
        <String>Grid</String>
      </Command.LabelTitle>
    </Command>
    <Command Name="cmdShowAxis" Symbol="IDC_CMD_SHOW_AXIS">
      <Command.LabelTitle>
        <String>Axis and tick</String>
      </Command.LabelTitle>
    </Command>
    <Command Name="cmdSave" Symbol="IDC_CMD_SAVE">
      <Command.LabelTitle>
        <String>Save viewport...</String>
      </Command.LabelTitle>
    </Command>
    <Command Name="cmdContextMapPlot" Symbol="IDC_CMD_CONTEXT_PLOT" />
    <Command Name="cmdApplicationMenu" />
    <Command Name="cmdQAT" />
    <Command Name="tabNotUsed" />
  </Application.Commands>
  <Application.Views>
    <Ribbon>
      <Ribbon.Tabs>
        <Tab CommandName="tabNotUsed">
        </Tab>
      </Ribbon.Tabs>
      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="cmdApplicationMenu" />
      </Ribbon.ApplicationMenu>
      <Ribbon.QuickAccessToolbar>
        <QuickAccessToolbar CommandName="cmdQAT" />
      </Ribbon.QuickAccessToolbar>
    </Ribbon>
    <ContextPopup>
      <ContextPopup.ContextMenus>
        <ContextMenu Name="ContextMenuPlot">
          <MenuGroup>
            <CheckBox CommandName="cmdShowGrid" />
            <CheckBox CommandName="cmdShowAxis" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="cmdSave" />
          </MenuGroup>
        </ContextMenu>
      </ContextPopup.ContextMenus>
      <ContextPopup.ContextMaps>
        <ContextMap CommandName="cmdContextMapPlot" ContextMenu="ContextMenuPlot" />
      </ContextPopup.ContextMaps>
    </ContextPopup>
  </Application.Views>
</Application>
